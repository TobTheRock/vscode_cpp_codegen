{
	"name": "codegen-cpp",
	"displayName": "Universal Generator for C++",
	"description": "Generator stuff from C++ headers etc",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codegen-cpp.cppSourceFromHeader"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codegen-cpp.cppSourceFromHeader",
				"title": "Generate C++ source file from current header",
				"when": "editorLangId == cpp"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"mocha-param": "^2.0.1",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
